<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".car.requestSender.StatusViewActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FDD825"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:text="Your Latest Request Status" />

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:id="@+id/no_req"
        android:layout_width="250sp"
        android:layout_height="250sp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linearLayout6"
        app:layout_constraintTop_toTopOf="@+id/linearLayout6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="You have not requested service yet"
                android:gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:visibility="gone"
            app:cardBackgroundColor="#EDEDED"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:id="@+id/emp_name"
                    android:textSize="18sp"/>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="15sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="From"/>
                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/from"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="15sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="To"/>
                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reason"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:id="@+id/reason1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="15sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Requested On"/>
                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/req_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="15sp"
                        android:paddingRight="5dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Requested For"/>
                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/time_needed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:text=""
                    android:background="#D5D5D5"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:id="@+id/status"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/remark"
                    android:textColor="#E40000"
                    android:background="#D5D5D5"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:paddingVertical="5sp"
                    android:text=""
                    android:visibility="visible"/>
                <Button
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CANCEL REQUEST"
                    android:id="@+id/cancel_request"
                    android:backgroundTint="#ff0000"
                    />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

</LinearLayout>